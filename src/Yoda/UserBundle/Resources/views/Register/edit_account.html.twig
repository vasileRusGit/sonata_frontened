{% extends ['@Event/Event/knp.html.twig', '::base.html.twig'] %}


{% block stylesheets %}
    {{ parent() }}
    <!--glyphicons-->
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('bundles/event/css/header.css') }}"/>
    <link href="{{ asset('bundles/user/css/custom_login.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}
    <div class="form" style="margin-top: 100px;">

        {#<div class="thumbnail"><img src="{{ asset('bundles/user/img/login_image.png') }}"/></div>#}
        <h1 class="display-4">Edit account {{ user.username }}</h1>

        {#error message#}
        {#{% if error %}#}
        {#<div class="error-message">{{error.message|trans}}</div>#}
        {#{% endif %}#}

        <form method="POST" action="{{ path('user_edit', {'id': user.id }) }}">

            {{ form_errors(form) }}

            {{ form_row(form.username, {'attr': {'id': 'username', 'placeholder': 'name', 'value': user.username}}) }}
            {{ form_row(form.email, {'attr': {'id': 'email', 'placeholder': 'email address', 'value': user.email}}) }}

            {{ form_row(form.password.first, {'attr': {'id': 'password', 'placeholder': 'password'}}) }}

            {{ form_row(form.password.second, {'attr': {'id': 'password', 'placeholder': 'repeat password'}}) }}

            {{ form_rest(form) }}

            <button type="submit">update</button>
        </form>
    </div>
{% endblock %}


{% block javascripts %}
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"
            integrity="sha384-THPy051/pYDQGanwU6poAc/hOdQxjnOEXzbT+OuUAFqNqFjL+4IGLBgCJC3ZOShY"
            crossorigin="anonymous"></script>
    <!-- Bootstrap 4 Alpha JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js"
            integrity="sha384-VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU"
            crossorigin="anonymous"></script>

    <script src="{{ asset('bundles/user/js/login.js') }}"></script>
{% endblock %}